<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.DatePicker?>
<DialogPane fx:controller="com.example.todolist.DialogController" xmlns:fx="http://javafx.com/fxml">
    <headerText>
        Some instructions
    </headerText>
    <content>
        <GridPane hgap="10" vgap="10" >
            <Label text="Short description : " GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField GridPane.rowIndex="0" GridPane.columnIndex="1" fx:id="shortDescription"/>
            <Label text="Details : " GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextArea GridPane.rowIndex="1" GridPane.columnIndex="1" fx:id="details" wrapText="true"/>
            <Label text="Date : " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <DatePicker GridPane.rowIndex="2" GridPane.columnIndex="1" fx:id="deadline"/>
        </GridPane>
    </content>
</DialogPane>